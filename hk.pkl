amends "pkl/config.pkl"

pre_commit {
    new {
        ["prettier"] {}
        ["eslint"] {}
        ["rustfmt"] {
            glob = new { "*.rs" }
            file_types = new { "rust" }
        }
    }
    new {
        ["custom"] {
            run = "echo 'custom'"
        }
    }
}
